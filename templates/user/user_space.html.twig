{% extends 'base.html.twig' %}

{% block title %}User space{% endblock %}

{% block css %}
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css">
<link src="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.3.0/ekko-lightbox.css">
{% endblock %}

{% block content %}
<div class="row justify-content-center mb-5">
    <h1 class="title">MON ESPACE</h1>
</div>
<h2 class="row justify-content-center my-5">Films les mieux not√©s :</h2>
<!--Slides-->
<div id="multi-item-example" class="carousel slide carousel-multi-item" data-ride="carousel">
    {% set i = 0 %}
    {% for top in topRated %}
    {% set i = i + 1  %}
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item with-background  {{ i == 1 ? 'active' : '' }}">
            <div class="row justify-content-center p-5 mx-2">
                <div class="col-4">
                    <img class="img-fluid" src="http://image.tmdb.org/t/p/w300/{{ top.poster_path }}"
                        alt="{{ top.title}}">
                </div>
                <div class="col-8">
                    <h3 class="text-light"><a href="{{ path('movie_details',{ id: top.id }) }}">{{ top.title }}</a></h3>
                    <p class="text-light text-">VO en {{ top.original_language|upper}}</p>
                    <p class="text-light text-"><i class="fas fa-star"></i> Note moyenne : {{ top.vote_average}}</p>
                    <p class="text-light text-">{{ top.overview|slice(0, 300) }}...</p>
                    <a class="btn btn-outline-primary btn-sm rounded"
                        href="{{ path('movie_details',{ id: top.id }) }}">Lire la suite</a>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
    <a class="carousel-control-prev" href="#multi-item-example" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#multi-item-example" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<h2 class="row justify-content-center my-5">Films les plus populaires :</h2>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        {% set i = 0 %}
        {% for most in mostViewed %}
            {% set i = i + 1 %}
            <div class="justify-content-centercarousel-item  {{ i == 1 ? 'active' : '' }}">
                <div class="col4 " style="float:right">
                    {% if most.current_trailer is defined %}
                    <a href="{{most.current_trailer }}" data-toggle="lightbox">
                        <img class="w-5" src="http://image.tmdb.org/t/p/w92/{{ most.poster_path }}" alt="{{ most.title }}" alt="">
                    </a>
                {% else %}
                    <img class="w-5" src="http://image.tmdb.org/t/p/w92/{{ most.poster_path }}" alt="{{ most.title }}" alt="">
                {% endif %}

                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}

{% block js %}
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="{{ asset('asset/js/fabien.js') }}"> </script>
<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
<script src = "https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.3.0/ekko-lightbox.min.js"></script>


<script>
    $(document).on('click', '[data-toggle="lightbox"]', function (event) {
        event.preventDefault();
        $(this).ekkoLightbox();
    });
</script>
{% endblock %}