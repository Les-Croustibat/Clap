{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe{% endblock %}

{% block content %}

    {# Reset password page #}

    <div class="container resetPw">

        <div class="row justify-content-center">
            <h1 class="mt-5 mb-5 text-center">Réinitialisez <br> votre mot de passe</h1>
        </div>

        <div class="row justify-content-center mb-4">
            <form>
                <div class="form-group row">
                    <label for="new_email">Entrez votre nouvel email</label>
                    <input type="email" class="form-control" id="new_email" name="new_email">
                </div>
                <div class="form-group row">
                    <label for="check_email">Confirmez votre email</label>
                    <input type="email" class="form-control" id="check_email" name="check_email">
                </div>

                <div class="row justify-content-center ">
                    <button type="submit" class="btn btn-secondary m-5">Envoyer</button>
                </div>
            </form>
        </div>
    </div>


{% endblock %}

{% block js %} {% endblock %}
