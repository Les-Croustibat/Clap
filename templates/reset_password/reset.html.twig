{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block content %}
    <div class="row justify-content-center">
            <h1 class="mt-5 mb-5 text-center">Réinitialisez <br> votre mot de passe</h1>
    </div>

    <div class="row justify-content-center">
        {{ form_start(resetForm) }}
            {{ form_row(resetForm.plainPassword) }}
            <div class="col-6">
                <button type="submit" class="btn btn-secondary m-5 ">Réinitialisez</button>
            </div>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}
