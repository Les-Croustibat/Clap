{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block content %}
{# Entête du formulaire #}
<div class="container">
    <div class="text-center mb-5 header">
        <h1>Contact</h1>
        <p>Une suggestion, une question ?</p>
    </div>

{# Formulaire de contact #}
    <div class="form text-center">
        <form method="POST" class="row justify-content-center">
            <div class="form-group col-12">
                <label class="text-left col-2">Nom :</label>
                <input></input>
            </div>
            <div class="form-group col-12">
                <label class="text-left col-2">Prénom :</label>
                <input></input>
            </div>
            <div class="form-group col-12">
                <label class="text-left col-2">Email :</label>
                <input></input>
            </div>
            <div class="form-group col-12">
                <label class="text-left col-2">Objet :</label>
                <input></input>
            </div>
            <div class="form-group col-12">
                <label class="text-left col-2">Message :</label>
                <textarea></textarea>
            </div>
            <div class="text-center mt-5 form-button">
                <button type="submit" class="btn btn-danger">Envoyer</button>
            </div>
        </form>
    </div>
</div>

{% endblock %}

{% block js %} {% endblock %}
