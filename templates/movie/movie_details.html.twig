{% extends 'base.html.twig' %}

{% block title %}Fiche de film{% endblock %}

{% block content %}
{# Fiche du film #}
<main class="d-flex justify-content-center align-items-center">
    <div class="card bg_perso mb-3 poster" style="">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="..." class="card-img" alt="Affiche du film">
        </div>
        <div class="col-md-8">
        <div class="card-body">
            <h5 class="card-title">Titre du film</h5>
