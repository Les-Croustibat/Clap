{% extends 'base.html.twig' %}

{% block title %}Se déconnecter
{% endblock %}

{% block content %}

	<div class="container">
		<div class="row justify-content-center mb-4">
			<div class="col-2 col-xl-12">

				<div class="row justify-content-center">
					<h1 class="mt-5 mb-5 text-center">Etes-vous sûr(e)</br>
