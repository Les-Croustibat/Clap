{% extends 'base.html.twig' %}

{% block title %}Se déconnecter
{% endblock %}
 {% block css %}<link rel="stylesheet" href="sweetalert2.min.css">{% endblock %}
{% block content %}

	<div class="container">
		<div class="row justify-content-center mb-4">
			<div class="col-2 col-xl-12">

				<div class="row justify-content-center">
					<h1 class="mt-5 mb-5 text-center">Etes-vous sûr(e)</br>
					de vouloir vous déconnecter ?</h1>
			</div>

			<div class="row justify-content-center mb-4">

				<div class="row justify-content-center mb-4">
					<form method="post">
						<a href="{{ path('default_home') }}" class="btn btn-dark">Annuler</a>
						<input type="hidden" name="action" value="delete">
						<button type="submit" class="btn btn-danger">Oui, je veux me déconnecter</button>
					</form>
				</div>

				<div class="row justify-content-center">
            		<img src="{{asset('asset/img/bye.jpg')}}" alt="tobecontinued" class="img-bye">
        		</div>

			</div>
		</div>

	</div>
</div>{% endblock %}

{% block js %}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
<script>
// On attend que le DOM soit chargé
window.onload = () => {

swal.fire({
    title: 'Are you sure?',
    text: "You won't be able to revert this!",
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#3085d6',
    cancelButtonColor: '#d33',
    confirmButtonText: 'Yes, delete it!'
  }).then((result) => {
    if (result.value) {
      swal.fire(
        'Deleted!',
        'Your file has been deleted.',
        'success'
      )
    }
  })

}</script>
{% endblock %}
