{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block content %}


	<div class="container">

		<div class="row- justify-content-center">
			<h1 class="mt-5 mb-5 text-center">Se connecter</h1>
		</div>

		<div class="row justify-content-center mb-4">

			<div class="row justify-content-center mb-4">
				<form
					method="post">

					{# REVOIR MESSAGES D'ERREURS !! #}
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							Vous êtes connecté(e) avec l'email "{{ app.user.username }}",
							<a href="{{ path('security_logout') }}">Se déconnecter</a>
						</div>
					{% endif %}

					<div class="form-group row">
						<label for="inputPseudo">Pseudo :
						</label>
						<input type="text" name="pseudo" id="inputPseudo" class="form-control" required autofocus>
					</div>

					<div class="form-group row">
						<label for="inputEmail">Email :
						</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required>
					</div>

					<div class="form-group row">
						<label for="inputPassword">Mot de passe :
						</label>
						<input type="password" name="password" id="inputPassword" class="form-control" required>
					</div>

					<input
					type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
																				
					<div class="checkbox mb-3">
						<label>
							<input type="checkbox" name="_remember_me"> Rester connecté(e)
						</label>
					</div>

					<div class="row justify-content-center ">
						<button class="btn btn-secondary m-5" type="submit">
							Connexion
						</button>
					</div>

				</form>

			</div>

		</div>
	{% endblock %}
